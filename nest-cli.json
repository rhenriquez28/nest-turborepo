{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.json"
  },
  "monorepo": true,
  "root": "apps/nest-app",
  "projects": {
    "nest-app": {
      "type": "application",
      "root": ".",
      "entryFile": "main",
      "sourceRoot": "src",
      "compilerOptions": {
        "tsConfigPath": "apps/nest-app/tsconfig.json"
      }
    },
    "nest-app-2": {
      "type": "application",
      "root": "apps/nest-app-2",
      "entryFile": "main",
      "sourceRoot": "apps/nest-app-2/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nest-app-2/tsconfig.json"
      }
    },
    "nest-lib": {
      "type": "library",
      "root": "packages/nest-lib",
      "entryFile": "index",
      "sourceRoot": "packages/nest-lib/src",
      "compilerOptions": {
        "tsConfigPath": "packages/nest-lib/tsconfig.json"
      }
    }
  }
}
